<!-- Screen4.view.xml -->
<mvc:View
  id="screen4View"
  controllerName="apptracciabilita.apptracciabilita.controller.Screen4"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mdc="sap.ui.mdc"
  xmlns:mdctable="sap.ui.mdc.table">

  <Page id="page4" title="Tracciabilità - Schermata 02">
    <customHeader>
      <Toolbar id="toolbar4">
        <Button id="buttonBack4" icon="sap-icon://nav-back" press=".onNavBack" />
        <Title id="title4" text="Tracciabilità (Schermata 02)" />
        <ToolbarSpacer id="spacerHdr4" />
        <Image id="imageLogo4" src="img/valentino_logo.png" decorative="false" />
      </Toolbar>
    </customHeader>

    <subHeader>
      <Toolbar id="toolbarInfo4">
        <Label id="lblVend4" text="Fornitore:" />
        <Text id="txtVend4" text="{detail>/VendorId}" />
        <ToolbarSpacer id="spVend4"/>

        <Label id="lblMat4" text="Materiale:" />
        <Text id="txtMat4" text="{detail>/Material}" />
        <ToolbarSpacer id="spMat4"/>

        <Label id="lblFib4" text="Fibra:" />
        <Text id="txtFib4" text="{detail>/Fibra}" />
      </Toolbar>
    </subHeader>

    <content>
      <VBox id="vboxContent4" width="100%">

        <!-- Toolbar stile "Pelletterie": filtro + bottoni -->
        <HBox id="hboxToolbarTable4" width="100%" justifyContent="End" alignItems="Center" class="sapUiTinyMargin">
          <HBox id="hboxFilter4" class="sapUiTinyMarginEnd" alignItems="Center">
            <Label id="lblSearch4" text="Cercare:" labelFor="inputFilter4" class="sapUiTinyMarginEnd"/>
            <Input id="inputFilter4" width="22rem" liveChange=".onGlobalFilter" placeholder="Filtro testuale su Schermata 02"/>
          </HBox>

          <Toolbar id="tblToolbar4" design="Transparent">
           <!--  <Button id="tbSelectAll4" icon="sap-icon://multi-select" tooltip="Seleziona tutto" press=".onSelectAll" enabled="{= !${ui>/edit} }"/>
            <Button id="tbEdit4"      icon="sap-icon://edit"        tooltip="Modifica"         press=".onEdit"      enabled="{= !${ui>/edit} }"/>
            <Button id="tbSave4"      icon="sap-icon://save"        tooltip="Salva"            press=".onSave"      enabled="{ui>/edit}"/> -->
            <Button id="tbPrint4"     icon="sap-icon://print"       tooltip="Stampa"           press=".onPrint"/>
            <Button id="tbExcel4"     icon="sap-icon://excel-attachment" tooltip="Excel"       press=".onExportExcel"/>
          </Toolbar>
        </HBox>

        <mdc:Table
          id="mdcTable4"
          type="Table"
          width="100%"
          header="Schermata 02"
          selectionMode="Multi"
          p13nMode="Column,Sort,Group"
          delegate='{"name":"apptracciabilita/apptracciabilita/delegates/MdcGenericTableDelegate","payload":{"cfgModel":"vm","cfgPath":"/mdcCfg/screen4"}}'>
          <!-- colonne create in controller -->
        </mdc:Table>

      </VBox>
    </content>
  </Page>
</mvc:View>
