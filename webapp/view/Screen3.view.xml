<mvc:View
  id="screen3View"
  controllerName="apptracciabilita.apptracciabilita.controller.Screen3"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Page id="page3" title="Dettaglio tracciabilità materiale">
    <customHeader>
      <Toolbar id="toolbar3">
        <Button id="buttonBack3" icon="sap-icon://nav-back" press=".onNavBack" />
        <Title id="title3" text="Dettaglio tracciabilità" />
        <ToolbarSpacer id="spacerHdr3" />
        <Image id="imageLogo3" src="img/valentino_logo.png" decorative="false" />
      </Toolbar>
    </customHeader>

    <subHeader>
      <Toolbar id="toolbarInfo3">
        <Label id="lblVend3" text="Fornitore:" />
        <Text id="txtVend3" text="{detail>/VendorId}" />
        <ToolbarSpacer id="sp1_3" />

        <Label id="lblRag3" text="Ragione sociale:" />
        <Text id="txtRag3" text="{detail>/VendorName}" />
        <ToolbarSpacer id="sp2_3" />

        <Label id="lblMat3" text="Materiale:" />
        <Text id="txtMat3" text="{detail>/Material}" />
        <ToolbarSpacer id="sp3_3" />

        <Label id="lblGrp3" text="Gruppo merci:" />
        <Text id="txtGrp3" text="{detail>/MaterialGroup}" />
      </Toolbar>
    </subHeader>

    <content>
      <ScrollContainer
        id="scrollTable3"
        width="100%"
        height="auto"
        horizontal="true"
        vertical="false"
        focusable="false">

        <Table
          id="tableData3"
          inset="false"
          fixedLayout="true">

          <headerToolbar>
            <Toolbar id="toolbarTableHeader3">
              <Title id="titleTable3" text="Righe di tracciabilità" level="H2" />
            </Toolbar>
          </headerToolbar>

        </Table>
      </ScrollContainer>
    </content>
  </Page>
</mvc:View>
