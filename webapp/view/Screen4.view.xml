<mvc:View
  id="screen4View"
  controllerName="apptracciabilita.apptracciabilita.controller.Screen4"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mdc="sap.ui.mdc">

  <Page id="page4" title="Dettaglio" enableScrolling="false" class="sapUiNoContentPadding fullHeightPage">

    <customHeader>
      <Toolbar id="toolbar4" class="appCustomHeader">
        <Bar id="bar4">
          <contentLeft>
            <Image id="imageLogo4" src="IMG/Valentino.png" decorative="false" width="200px" class="hideLogo"/>
            <Button id="buttonBack4" icon="sap-icon://nav-back" press=".onNavBack" type="Transparent"/>
          </contentLeft>
          <contentMiddle>
            <Title id="title4" text="Dettaglio" level="H3"/>
          </contentMiddle>
          <contentRight>
            <ToolbarSpacer id="bar4SpacerRight"/>
          </contentRight>
        </Bar>
      </Toolbar>
    </customHeader>

    <!-- subHeader: only IBar types allowed -->
    <subHeader>
      <OverflowToolbar id="toolbarInfo4" design="Transparent" class="subHeaderBar">

        <HBox
          id="hdr4Dynamic"
          fitContainer="true"
          wrap="Wrap"
          alignItems="Center"
          visible="{= ${detail>/Header4Fields} &amp;&amp; ${detail>/Header4Fields}.length > 0 }"
          items="{detail>/Header4Fields}">
          <items>
            <HBox id="hdr4PairTmpl" class="hdrDynPair" alignItems="Center">
              <Label id="hdr4LblTmpl" text="{detail>label}:" design="Bold" class="hdrDynLbl"/>
              <Text id="hdr4ValTmpl" text="{detail>value}" class="hdrDynVal"/>
            </HBox>
          </items>
        </HBox>

      </OverflowToolbar>
    </subHeader>

    <content>

      <HBox
        id="hboxToolbarTable4"
        width="100%"
        justifyContent="SpaceBetween"
        alignItems="Center"
        class="tableControlBar"
        wrap="Wrap">

        <HBox id="hboxFilter4" alignItems="Center" class="searchFilterBox">
          <Label id="lblFilter4" text="Cercare:" labelFor="inputFilter4" class="sapUiTinyMarginEnd filterLabel"/>
          <Input id="inputFilter4" width="100%" liveChange=".onGlobalFilter" placeholder="Filtro testuale su tutti i campi" class="searchInput"/>
          <Button id="btnColFilters4" icon="sap-icon://filter" tooltip="Filtri per colonna" press=".onOpenColumnFilters" type="Transparent"/>
          <Button id="btnSort4" icon="sap-icon://sort" tooltip="Ordinamento" press=".onOpenSort" type="Transparent"/>
          <Button id="btnResetFS4" icon="sap-icon://reset" tooltip="Reset filtri/ordinamento" press=".onResetFiltersAndSort" type="Transparent"/>
        </HBox>

        <Toolbar id="tblToolbar4" design="Transparent" class="actionToolbar">
          <ToolbarSpacer id="footerToolbar4sp"/>
          <Button id="btnAddRow02" text="Aggiungi riga" type="Emphasized" icon="sap-icon://add" enabled="{detail>/__canAddRow}" press=".onAddRow" class="actionBtn"/>
          <Button id="btnDeleteRows02" text="Elimina righe" type="Negative" icon="sap-icon://delete" enabled="{detail>/__canAddRow}" press=".onDeleteRows" class="actionBtn"/>
          <Button id="tbPrint4" icon="sap-icon://print" tooltip="Stampa" press=".onPrint" type="Transparent"/>
          <Button id="tbExcel4" icon="sap-icon://excel-attachment" tooltip="Excel" press=".onExportExcel" type="Transparent"/>
        </Toolbar>

      </HBox>

      <mdc:Table
        id="mdcTable4"
        type="Table"
        width="100%"
        height="100%"
        selectionMode="Multi"
        p13nMode="Column"
        class="fullSizeTable"
        delegate='{
          "name":"apptracciabilita/apptracciabilita/delegates/MdcGenericTableDelegate",
          "payload":{
            "cfgModel":"vm",
            "cfgPath":"/mdcCfg/screen4",
            "defaultModel":"detail",
            "defaultPath":"/Rows"
          }
        }'>
      </mdc:Table>

    </content>

    <footer>
      <OverflowToolbar id="footerToolbar4">
        <ToolbarSpacer id="footerSpacer4"/>
      </OverflowToolbar>
    </footer>

  </Page>
</mvc:View>