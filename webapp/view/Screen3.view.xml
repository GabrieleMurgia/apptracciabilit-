<mvc:View
  id="screen3View"
  controllerName="apptracciabilita.apptracciabilita.controller.Screen3"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <!-- Screen3 = Schermata 01 (solo aUi01) -->
  <Page id="page3" title="Tracciabilità (Schermata 01)">
    <customHeader>
      <Toolbar id="toolbar3">
        <Button id="buttonBack3" icon="sap-icon://nav-back" press=".onNavBack" />
        <Title id="title3" text="Tracciabilità - Schermata 01" />
        <ToolbarSpacer id="spacerHdr3" />
        <Image id="imageLogo3" src="img/valentino_logo.png" decorative="false" />
      </Toolbar>
    </customHeader>

    <subHeader>
      <Toolbar id="toolbarInfo3">
        <Label id="lblVend3" text="Fornitore:" />
        <Text id="txtVend3" text="{detail>/VendorId}" />
        <ToolbarSpacer id="sp1_3" />

        <Label id="lblMat3" text="Materiale:" />
        <Text id="txtMat3" text="{detail>/Material}" />
        <ToolbarSpacer id="sp2_3" />

        <Label id="lblCount3" text="Record:" />
        <Text id="txtCount3" text="{detail>/RowsS3Count}" />
      </Toolbar>
    </subHeader>

    <content>
      <ScrollContainer
        id="scrollTable3"
        width="100%"
        height="auto"
        horizontal="true"
        vertical="false"
        focusable="false">

        <!-- Colonne + righe create dal controller in base a aUi01 -->
        <Table
          id="tableData3"
          inset="false"
          fixedLayout="false">
          <headerToolbar>
            <Toolbar id="toolbarTableHeader3">
              <Title id="titleTable3" text="Righe tracciabilità (aUi01)" level="H2" />
            </Toolbar>
          </headerToolbar>
        </Table>

      </ScrollContainer>
    </content>
  </Page>
</mvc:View>
